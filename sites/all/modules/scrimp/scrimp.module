<?php
/**
 * @file
 * Code for the Scrimp feature.
 */

include_once 'scrimp.features.inc';

/**
 * Implements hook_ctools_plugin_directory().
 */
function scrimp_ctools_plugin_directory($module, $plugin) {
  if ($module == 'ctools' && !empty($plugin)) {
    return "plugins/$plugin";
  }
}
